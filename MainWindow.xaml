                                <RowDefinition Height="25"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" Name="txtTitle" Margin="5,0,0,0" Text="Winning Smiles" HorizontalAlignment="Stretch" FontWeight="Normal" VerticalAlignment="Center" FontSize="24">
                            </TextBox>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" >
                                <TextBox Name="txtDescription" Margin="5,5,5,5" TextWrapping="Wrap" AcceptsReturn="True" FontSize="11" FontWeight="Normal">
                                </TextBox>
                            </ScrollViewer>
                            <TextBox Grid.Row="2" Name="txtMoreData" HorizontalAlignment="Center" Text="More data" FontWeight="Normal" FontSize="12" VerticalAlignment="Center" PreviewMouseLeftButtonUp="middleTextBox_PreviewMouseLeftButtonUp" Width="100" HorizontalContentAlignment="Center"/>
                            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Visible" Visibility="Hidden" Name="lowerScrollView">
                                <TextBox Name="txtNotes" Margin="10,10,10,10" FontSize="11" FontWeight="Normal" AcceptsReturn="True" TextWrapping="Wrap">
                                </TextBox>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Image bucket" FontSize="13" FontWeight="Bold" Style="{StaticResource tabItemStyle}" Name="imagebucket" MouseUp="ImagebucketTab_MouseUp">
                <Grid HorizontalAlignment="Stretch" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ItemsControl Name="mediaListBox" SnapsToDevicePixels="True" Margin="0,34,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ScrollContentPresenter}}}" >
                                </WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Image Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
							             Width="200"
							             Margin="5,5,5,0">
                                        <Image.Source>
                                            <BitmapImage UriSource="{Binding FileName}"  DecodePixelWidth="200" />
                                        </Image.Source>
                                    </Image>
                                    <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label.Content>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}{1}">
                                                        <Binding Path="FolderNum" />
                                                        <Binding Path="FolderName" />
                                                     </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Label.Content>
                                    </Label>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabItem>
            <TabItem Header="Play" FontSize="14" FontWeight="Bold" Style="{StaticResource tabItemStyle}" Name="play" PreviewMouseLeftButtonUp="play_PreviewMouseLeftButtonUp">

                <StackPanel>
                    <Viewbox Name="playViewbox" Height="444" HorizontalAlignment="Left" Margin="6,6,0,0"  VerticalAlignment="Top">
                    </Viewbox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Image library" FontSize="14" FontWeight="Bold" Style="{StaticResource tabItemStyle}" Name="imagelibrary">
                <Grid HorizontalAlignment="Stretch" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <WebBrowser x:Name="imagelibraryBrowser" Margin="0,0,0,0" Cursor="Arrow"  Source="http://www.google.com"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
